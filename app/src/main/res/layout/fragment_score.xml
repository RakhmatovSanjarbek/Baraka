<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.screens.score_screen.ScoreFragment"
    android:background="@color/screen_color">

    <TextView
        android:id="@+id/btn_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/txt_previous"
        android:textSize="16sp"
        android:padding="12dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="20dp"
        android:textColor="@color/primary_light"/>

    <TextView
        android:id="@+id/txt_sign_in"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/txt_my_score"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="@color/primary_color"
        android:layout_marginTop="14dp"
        android:layout_marginStart="80dp"/>

    <TextView
        android:id="@+id/tv_all_calculated"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/txt_all_calculated"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="80dp"
        android:textSize="16sp"
        android:textColor="@color/black"/>

    <LinearLayout
        android:id="@+id/ll_all_calculated"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_all_calculated"
        android:layout_centerHorizontal="true"
        android:orientation="horizontal"
        android:gravity="center_vertical">
        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/ic_star"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0.0 ball"
            android:textSize="20sp"
            android:layout_marginStart="4dp"
            android:textColor="@color/black"
            android:textStyle="bold"/>

    </LinearLayout>

    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_below="@id/ll_all_calculated"
        android:scrollbars="none">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal">
            <com.google.android.material.card.MaterialCardView
                android:layout_width="140dp"
                android:layout_height="64dp"
                app:cardBackgroundColor="@color/color_gray"
                app:cardElevation="0dp"
                app:strokeWidth="0dp"
                app:cardCornerRadius="16dp"
                android:layout_marginStart="8dp"
                android:layout_gravity="center_vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:gravity="center">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Jarayonda"
                        android:textSize="12sp"
                        android:textColor="@color/black"/>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginTop="4dp">
                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@drawable/ic_star"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0.0 ball"
                            android:textSize="12sp"
                            android:layout_marginStart="4dp"
                            android:textColor="@color/black"
                            android:textStyle="bold"/>

                    </LinearLayout>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>
            <com.google.android.material.card.MaterialCardView
                android:layout_width="140dp"
                android:layout_height="64dp"
                app:cardBackgroundColor="@color/color_gray"
                app:cardElevation="0dp"
                app:strokeWidth="0dp"
                app:cardCornerRadius="16dp"
                android:layout_marginStart="8dp"
                android:layout_gravity="center_vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:gravity="center">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Hamyonda"
                        android:textSize="12sp"
                        android:textColor="@color/black"/>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginTop="4dp">
                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@drawable/ic_star"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0.0 ball"
                            android:textSize="12sp"
                            android:layout_marginStart="4dp"
                            android:textColor="@color/black"
                            android:textStyle="bold"/>

                    </LinearLayout>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>
            <com.google.android.material.card.MaterialCardView
                android:layout_width="140dp"
                android:layout_height="64dp"
                app:cardBackgroundColor="@color/color_gray"
                app:cardElevation="0dp"
                app:strokeWidth="0dp"
                app:cardCornerRadius="16dp"
                android:layout_marginStart="8dp"
                android:layout_gravity="center_vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:gravity="center">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Tasdiqlangan"
                        android:textSize="12sp"
                        android:textColor="@color/black"/>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginTop="4dp">
                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@drawable/ic_star"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0.0 ball"
                            android:textSize="12sp"
                            android:layout_marginStart="4dp"
                            android:textColor="@color/black"
                            android:textStyle="bold"/>

                    </LinearLayout>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>
            <com.google.android.material.card.MaterialCardView
                android:layout_width="140dp"
                android:layout_height="64dp"
                app:cardBackgroundColor="@color/color_gray"
                app:cardElevation="0dp"
                app:strokeWidth="0dp"
                app:cardCornerRadius="16dp"
                android:layout_marginStart="8dp"
                android:layout_gravity="center_vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:gravity="center">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="To'langan"
                        android:textSize="12sp"
                        android:textColor="@color/black"/>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginTop="4dp">
                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@drawable/ic_star"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0.0 ball"
                            android:textSize="12sp"
                            android:layout_marginStart="4dp"
                            android:textColor="@color/black"
                            android:textStyle="bold"/>

                    </LinearLayout>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>
        </LinearLayout>
    </HorizontalScrollView>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_score_to_money"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_marginHorizontal="16dp"
        app:cornerRadius="16dp"
        android:text="@string/txt_score_to_money"
        android:textSize="16sp"
        android:textColor="@color/white"
        android:textStyle="bold"
        app:icon="@drawable/ic_wallet"
        app:iconGravity="textEnd"
        app:iconSize="22dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="24dp"/>

</RelativeLayout>